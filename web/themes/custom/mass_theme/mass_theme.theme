      $paragraphs = [];
      foreach ($paragraph_tags as $paragraph_tag) {
        if (!empty($paragraph_tag)) {
          $paragraphs[] = [
            'path' => '@atoms/11-text/raw-html.twig',
            'data' => [
              'rawHtml' => [
                'content' => trim(str_replace("<p>", "", $paragraph_tag)),
