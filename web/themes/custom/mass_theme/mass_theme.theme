      $list['column' . ++$id] = [
        [
          'path' => '@atoms/04-headings/column-heading.twig',
          'data' => [
            'columnHeading' => [
              'text' => $item->get('field_heading')->value,
            ],
          ],
        ],
        [
          'path' => '@organisms/by-author/rich-text.twig',
          'data' => [
            'rteElements' => $paragraphs,
          ],
        ],
      ];
    }
  }

  $variables['splitColumns'] = $list;
